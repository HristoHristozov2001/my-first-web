extends ../layout 

block content 
    .container  
        .row 
            .col-md-12 
                h1 Edit Computer 
                form(action="/computers/edit/#{computer.id}", method = "post") 
                    div.form-group
                        label(for="name") Name:
                        input.form-control(type="text", id="name", name="name", value=computer.name)
                    div.form-group
                        label(for="processor") CPU:
                        input.form-control(type="text", id="processor", name="processor", value=computer.processor)
                    div.form-group
                        label(for="ram") RAM:
                        input.form-control(type="text", id="ram", name="ram", value=computer.ram)
                    div.form-group
                        label(for="storage") Storage:
                        input.form-control(type="text", id="storage", name="storage", value=computer.storage)
                    div.form-group
                        label(for="gpu") GPU:
                        input.form-control(type="text", id="gpu", name="gpu", value=computer.gpu)
                    button.btn.btn-primary(type="submit") Save
                