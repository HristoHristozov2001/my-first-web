extends ../layout 

block content 
    .container
        .row 
            .col-md-12
                h1 Add animal
                form(action="/animals/addNew", method = 'post')
                    .form-group
                        label(for="name") Name: 
                        input.form-control(type="text", id="name", name="name")
                    .form-group 
                        label(for="species") Species:   
                        input.form-control(type="text", id="species", name="species")
                    .form-group
                        label(for="age") Age 
                        input.form-control(type="text", id="age", name="age")
                    .form-group
                        label(for="habitat") Habitat 
                        input.form-control(type="text", id="habitat", name="habitat")
                    .form-group
                        label(for="diet") Diet 
                        input.form-control(type="text", id="diet", name="diet")
                    .form-group
                        label(for="weight") Weight 
                        input.form-control(type="text", id="weight", name="weight")
                    .form-group
                        label(for="length") Length 
                        input.form-control(type="text", id="length", name="length")
                    button.btn.btn-primary(type="submit") Save