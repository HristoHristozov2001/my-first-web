extends ../layout

block content 
    h1 Forgot Password
    br
    if messages.length > 0
        each mess in messages
            .alert.alert-danger= mess
    form(action="/logIn/forgot-password", method="post")
        div.form-group 
            label(for="email") Enter your email:
            input.form-control(type="text", name="email", required=true)
        button.btn.btn-primary(type="submit") Send reset link
