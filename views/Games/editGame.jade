extends ../layout 

block content 
    .container  
        .row 
            .col-md-12 
                h1 Edit Game
                br
                form(action="/games/edit/#{game.id}", method="post")
                    .form-group
                        label(for="name") Name: 
                        input.form-control(type="text", id="name", name="name", value=game.name)
                    .form-group    
                        label(for="genre") Genre: 
                        input.form-control(type="text", id="genre", name="genre", value=game.genre)
                    .form-group    
                        label(for="platform") Platform: 
                        input.form-control(type="text", id="platform", name="platform", value=game.platform)
                    .form-group
                        label(for="rating") Rating: 
                        input.form-control(type="text", id="rating", name="rating", value=game.rating)
                    .form-group
                        label(for="releaseYear") Year: 
                        input.form-control(type="text", id="releaseYear", name="releaseYear", value=game.releaseYear)
                    .form-group
                        label(for="developer") Developer: 
                        input.form-control(type="text", id="developer", name="developer", value=game.developer)
                    button.btn.btn-primary(type="submit") Submit
