extends ../layout 

block content 
    .container  
        .row 
            .col-md-12 
                h1 Add Game
                br
                form(action="/games/addGame", method="post")
                    .form-group
                        label(for="name") Name: 
                        input.form-control(type="text", id="name", name="name")
                    .form-group    
                        label(for="genre") Genre: 
                        input.form-control(type="text", id="genre", name="genre")
                    .form-group    
                        label(for="platform") Platform: 
                        input.form-control(type="text", id="platform", name="platform")
                    .form-group
                        label(for="rating") Rating: 
                        input.form-control(type="text", id="rating", name="rating")
                    .form-group
                        label(for="releaseYear") Year: 
                        input.form-control(type="text", id="releaseYear", name="releaseYear")
                    .form-group
                        label(for="developer") Developer: 
                        input.form-control(type="text", id="developer", name="developer")
                    button.btn.btn-primary(type="submit") Submit